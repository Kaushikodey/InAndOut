@model InAndOut.Models.Expense

<form asp-action="Create" method="post">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">
                Add Item
            </h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="ExpenseTypeId"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ExpenseName" class="form-control" />
                        <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>    
                    <div class="col-4">
                        <select asp-for="ExpenseTypeId" class="form-control" asp-items="@ViewBag.TypeDropDown">
                            <option selected>--Selected Expense Type--</option>
                        </select>                       
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                    </div>
                    <div class="col-4 text-center row">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                    <div class="col-4 text-center row">
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
